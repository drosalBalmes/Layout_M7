<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:gravity="center"
             android:background="@color/black"
             android:stretchColumns="0,1,2">
    <TableRow>
        <TextView android:text="TABLE LAYOUT"
                  android:textColor="@color/white" android:textSize="22sp"/>
        <TextView android:text="Celda 1.2"
                  android:textColor="@color/white" android:textSize="22sp"/>
        <TextView android:text="Celda 1.3"
                  android:textColor="@color/white" android:textSize="22sp"/>
    </TableRow>
    <TableRow>
        <TextView android:text="Celda 2.1"
                  android:textColor="@color/white" android:textSize="22sp"/>
        <TextView android:text="Celda 2.2"
                  android:textColor="@color/white" android:textSize="22sp"/>
        <TextView android:text="Celda 2.3"
                  android:textColor="@color/white" android:textSize="22sp"/>
    </TableRow>
    <TableRow>
        <TextView android:text="Celda doble de ancho 3.1"
                  android:textColor="@color/white"
                  android:textSize="22sp"
                  android:layout_span="2" />
        <TextView android:text="Celda 3.2"
                  android:textSize="22sp"
                  android:textColor="@color/white"/>
    </TableRow>
    <TableRow>

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="170dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/one_piece_film_red"/>
        <TextView
                android:text="Celda 4.2"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"/>
        <Button
                android:id="@+id/btnMASimg"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/btn_star"
                android:text="Star Btn"/>
    </TableRow>
    <TableRow>
        <ImageButton
                android:id="@+id/arrowbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:layout_columnWeight="1"
                style="?android:attr/borderlessButtonStyle"
                android:background="@color/light_green"
                android:src="@android:drawable/ic_media_ff"/>
    </TableRow>
</TableLayout>
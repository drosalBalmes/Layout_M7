<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:rowCount="3"
        android:columnCount="3"
        android:background="@color/black"
        android:orientation="horizontal">

    <TextView android:layout_columnWeight="1" android:text="GRID LAYOUT"
              android:textColor="@color/white" android:textSize="22sp"/>
    <ImageButton
            android:id="@+id/arrowbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/light_green"
            android:src="@android:drawable/ic_media_ff"/>
    <ImageView
            android:id="@+id/imageView"
            android:layout_columnWeight="1"
            android:layout_width="25dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/one_piece_film_red"/>
    <Button
            android:id="@+id/button"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="roundButton"
            android:layout_gravity="center"
            android:backgroundTint="@color/blue"
            app:cornerRadius="15dp"/>
    <TextView android:layout_columnWeight="1" android:text="Celda 2.3"
              android:textColor="@color/white" android:textSize="22sp"/>

    <TextView android:layout_columnWeight="1" android:text="Celda doble de ancho 3.1"
              android:textColor="@color/white"
          android:layout_columnSpan="2" android:textSize="22sp"/>
    <TextView android:layout_columnWeight="1" android:text="Celda 3.2"
              android:textColor="@color/white" android:textSize="22sp"/>
</GridLayout>
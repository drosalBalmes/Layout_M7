<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/telefon"
        android:layout_width="175dp"
        android:layout_height="73dp"
        android:layout_marginTop="60dp"
        android:drawableRight="@android:drawable/stat_sys_phone_call"
        android:drawableTint="@color/black"
        android:hint="Telèfon"
        android:layout_below="@+id/mail"
        android:textStyle="bold|italic"
        android:typeface="serif"/>

    <EditText
        android:id="@+id/nom"
        android:layout_width="175dp"
        android:layout_height="73dp"
        android:layout_marginTop="28dp"
        android:hint="Nom"
        android:textStyle="bold|italic"
        android:typeface="sans"
        android:drawableRight="@drawable/ic_launcher_foreground"
        android:drawableTint="@color/black" />


    <EditText
        android:id="@+id/cognom"
        android:layout_width="175dp"
        android:layout_height="73dp"
        android:layout_below="@+id/nom"
        android:layout_marginTop="-23dp"
        android:hint="Cognom"
        android:textStyle="italic"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="175dp"
        android:layout_height="73dp"
        android:layout_marginTop="40dp"
        android:hint="Mail"
        android:backgroundTint="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableRight="@android:drawable/ic_dialog_email"
        android:layout_below="@+id/cognom"
        android:drawableTint="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adreça"/>


    <EditText
        android:id="@+id/adreça"
        android:layout_width="175dp"
        android:layout_height="73dp"
        android:hint="Adreça"
        android:layout_below="@+id/telefon"
        android:drawableRight="?android:attr/actionModeFindDrawable"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_below="@+id/adreça"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="456dp"
        android:entries="@array/dgen" />
    <ListView
        android:id="@+id/simpleListView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/telefon"/>

</RelativeLayout>